<% var name = this.get('name'),
       label = this.get('label'),
       sortable = this.get('sortable'),
       sort = this.get('sort'),
       resizable = this.get('resizable'),
       grid = this.get('grid'),
       showTitle = true,
       title = label != null? label : name;
  if (this.get('type') === 'checkbox' || this.get('type') === 'radio') {
    showTitle = false;
  }
%>
<th class="<%=this.cssClasses()%> <%=sortable? 'sortable' : ''%> <%=resizable? 'resizable' : ''%> <%=sort? 'sorted' : ''%>" title="<%=(showTitle) ? title : ''%>">
  <% /* the div.wrapper is necessary for firefox to correctly position the
      * resize handle */ %>
  <div class=wrapper>
    <% if (resizable) { %>
      <span class=resize>&nbsp;</span>
    <% } %>

    <div class=label>
      <%=label != null? label : name%>
      <% if (sortable) { %>
      <span class="sort-arrow <%=sort? '' : 'invisible'%>">
          <%= /asc/i.test(sort)? '&#x25b2;' : '&#x25bc;' %>
        </span>
      <% } %>
    </div>
  </div>

</th>
